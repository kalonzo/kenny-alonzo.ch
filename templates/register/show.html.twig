{% extends 'base.html.twig' %}

{% block title %}Portfolios{% endblock %}

{% block body %}
    <h1>Portfolios</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdPortfolio</th>
                <td>{{ portfolio.idPortfolio }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ portfolio.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ portfolio.slug }}</td>
            </tr>
            <tr>
                <th>Descn</th>
                <td>{{ portfolio.descn }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ portfolio.creationDate ? portfolio.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ portfolio.publishedAt ? portfolio.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ portfolio.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('register_index') }}">back to list</a>

    <a href="{{ path('register_edit', {'idPortfolio': portfolio.idPortfolio}) }}">edit</a>

    {{ include('register/_delete_form.html.twig') }}
{% endblock %}
