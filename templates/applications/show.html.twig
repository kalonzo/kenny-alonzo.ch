{% extends 'base.html.twig' %}

{% block title %}Applications{% endblock %}

{% block body %}
    <h1>Applications</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdApp</th>
                <td>{{ application.idApp }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ application.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ application.slug }}</td>
            </tr>
            <tr>
                <th>Descn</th>
                <td>{{ application.descn }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ application.creationDate ? application.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ application.publishedAt ? application.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ application.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('applications_index') }}">back to list</a>

    <a href="{{ path('applications_edit', {'idApp': application.idApp}) }}">edit</a>

    {{ include('applications/_delete_form.html.twig') }}
{% endblock %}
