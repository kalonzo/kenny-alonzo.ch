<form method="post" action="{{ path('skills_delete', {'idSkill': skill.idSkill}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skill.idSkill) }}">
    <button class="btn">Delete</button>
</form>
