{% extends 'base.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}
    <h1>Skills</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdSkill</th>
                <td>{{ skill.idSkill }}</td>
            </tr>
            <tr>
                <th>Star</th>
                <td>{{ skill.star }}</td>
            </tr>
            <tr>
                <th>YearAcquisition</th>
                <td>{{ skill.yearAcquisition }}</td>
            </tr>
            <tr>
                <th>Descn</th>
                <td>{{ skill.descn }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ skill.creationDate ? skill.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ skill.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('skills_index') }}">back to list</a>

    <a href="{{ path('skills_edit', {'idSkill': skill.idSkill}) }}">edit</a>

    {{ include('skills/_delete_form.html.twig') }}
{% endblock %}
