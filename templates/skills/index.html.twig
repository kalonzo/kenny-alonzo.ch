{% extends 'base.html.twig' %}

{% block title %}Skills index{% endblock %}

{% block body %}
    <h1>Skills index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdSkill</th>
                <th>Star</th>
                <th>YearAcquisition</th>
                <th>Descn</th>
                <th>CreationDate</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td>{{ skill.idSkill }}</td>
                <td>{{ skill.star }}</td>
                <td>{{ skill.yearAcquisition }}</td>
                <td>{{ skill.descn }}</td>
                <td>{{ skill.creationDate ? skill.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ skill.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('skills_show', {'idSkill': skill.idSkill}) }}">show</a>
                    <a href="{{ path('skills_edit', {'idSkill': skill.idSkill}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('skills_new') }}">Create new</a>
{% endblock %}
