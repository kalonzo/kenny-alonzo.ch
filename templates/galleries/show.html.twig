{% extends 'base.html.twig' %}

{% block title %}Galleries{% endblock %}

{% block body %}
    <h1>Galleries</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdGallery</th>
                <td>{{ gallery.idGallery }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ gallery.filename }}</td>
            </tr>
            <tr>
                <th>Uniquefilename</th>
                <td>{{ gallery.uniquefilename }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ gallery.image }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ gallery.duration }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ gallery.creationDate ? gallery.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('galleries_index') }}">back to list</a>

    <a href="{{ path('galleries_edit', {'idGallery': gallery.idGallery}) }}">edit</a>

    {{ include('galleries/_delete_form.html.twig') }}
{% endblock %}
